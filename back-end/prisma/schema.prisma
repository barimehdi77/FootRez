// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  players Player[]

  TimeZone TimeZone[]
  @@map(name: "team")
}

model Player {
  id   Int    @id @default(autoincrement())
  name String @unique
  age  Int

  Team   Team? @relation(fields: [teamId], references: [id])
  teamId Int?
  @@map(name: "player")
}

model TimeZone {

  id         String  @id @unique
  isReserved Boolean @default(false)
  reserver   Team    @relation(fields: [teamId], references: [id])

  teamId Int
  Week   Week? @relation(fields: [weekId], references: [id])
  weekId Int?
  @@map(name: "timezone")
}

model Week {

  id       Int        @id @default(autoincrement())
  DayName  String
  timeZone TimeZone[]
  @@map(name: "week")
}

model User {
  id        Int    @id @default(autoincrement())
  first_name String
  last_name  String
  login      String @unique
  user_name  String? @unique
  email      String @unique
  image_url  String
  ProfileDone Boolean @default(false)

  @@map(name: "user")
}
